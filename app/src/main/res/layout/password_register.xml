    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dip"
        android:background="@drawable/bg_middle_custom_dialog"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/TextUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="User Name:"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            />
        <EditText
            android:id="@+id/editUsername"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextUsername" />


        <TextView
            android:id="@+id/TextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Password:"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="50dip">

                <EditText
                    android:id="@+id/editPasswordText1"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_bg_shape"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1" />
                <TextView
                    android:id="@+id/textPasswordView1"
                    android:layout_width="15dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center"
                    android:background="@color/whileColor"
                    android:gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="10dp"

                >
                <EditText
                    android:id="@+id/editPasswordText2"
                    android:layout_width="50dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/edit_bg_shape"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1" />
                <TextView
                    android:id="@+id/textPasswordView2"
                    android:layout_width="15dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center"
                    android:background="#808080"
                    android:gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="10dp"
                >
                <EditText
                    android:id="@+id/editPasswordText3"
                    android:layout_width="50dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/edit_bg_shape"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:maxLength="1" />
                <TextView
                    android:id="@+id/textPasswordView3"
                    android:layout_width="15dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center"
                    android:background="#808080"
                    android:gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="10dp"
                >
                <EditText
                    android:id="@+id/editPasswordText4"
                    android:layout_width="50dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/edit_bg_shape"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1" />
                <TextView
                    android:id="@+id/textPasswordView4"
                    android:layout_width="15dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center"
                    android:background="#808080"
                    android:gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/TextConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Confirm Password:"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="50dip">

                <EditText
                    android:id="@+id/editPasswordConfirmText1"
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_bg_shape"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1" />
                <TextView
                    android:id="@+id/textPasswordConfirmView1"
                    android:layout_width="15dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center"
                    android:background="@color/whileColor"
                    android:gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="10dp"

                >
                <EditText
                    android:id="@+id/editPasswordConfirmText2"
                    android:layout_width="50dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/edit_bg_shape"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1" />
                <TextView
                    android:id="@+id/textPasswordConfirmView2"
                    android:layout_width="15dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center"
                    android:background="#808080"
                    android:gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="10dp"
                >
                <EditText
                    android:id="@+id/editPasswordConfirmText3"
                    android:layout_width="50dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/edit_bg_shape"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:maxLength="1" />
                <TextView
                    android:id="@+id/textPasswordConfirmView3"
                    android:layout_width="15dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center"
                    android:background="#808080"
                    android:gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="10dp"
                >
                <EditText
                    android:id="@+id/editPasswordConfirmText4"
                    android:layout_width="50dip"
                    android:layout_height="fill_parent"
                    android:background="@drawable/edit_bg_shape"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="1" />
                <TextView
                    android:id="@+id/textPasswordConfirmView4"
                    android:layout_width="15dip"
                    android:layout_height="2dip"
                    android:layout_gravity="center"
                    android:background="#808080"
                    android:gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:background="@drawable/bg_bottom_custom_dialog"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="1dip"
            android:layout_height="30dp"
            android:background="@drawable/bbuton_info_rounded"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:singleLine="true"
            android:clickable="false"/>

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="1dip"
            android:layout_height="30dp"
            android:background="@drawable/bbuton_danger_rounded"
            android:layout_marginLeft="3dip"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>